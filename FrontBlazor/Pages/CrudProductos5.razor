        <div class="modal-dialog">
            <div class="modal-content">
                <form @onsubmit="GuardarProducto">
                    <div class="modal-header">
                        <h4 class="modal-title">Agregar Producto</h4>
                        <button type="button" class="close" @onclick="CerrarModal">&times;</button>
                    </div>
